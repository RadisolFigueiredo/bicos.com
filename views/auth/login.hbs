<section id="log-in" class="login-block card-1-login">
  {{#if errorMessage}}
  <p class="error-message">
    {{ errorMessage }}
  </p>
  {{/if}}
  <div class="container">
    <div class="row">
      <div class="col-md-4 login-sec">
        <h2 class="text-center">Login</h2>
        <form action="/login" method="post" class="login-form">
          <div class="form-group">
            <label for="email-input" class="text-uppercase">Email</label>
            <input type="email" name="email" id="email-input" class="form-control" placeholder="e.g., xena@warrior.company">
          </div>

          <div class="form-group">
            <label for="password-input" class="text-uppercase">Password</label>
            <input type="password" name="password" id="password-input" class="form-control" placeholder= "e.g. ••••••••••••">
          </div>

          <div class="form-check">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input">
              <small>Lembrar-me</small>
            </label>
            <button type="submit" class="btn btn-login float-right">Entrar</button>
          </div>
        
        </form>
        <div class="copy-text">Crie sua conta no <i class="fa fa-heart"></i> by <a href="/signup">Bicos.com</a></div>
